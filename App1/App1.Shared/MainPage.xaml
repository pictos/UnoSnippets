<Page
	x:Class="App1.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:App1"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Padding="10"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
	mc:Ignorable="d">

	<Grid>
		<RefreshContainer>
			<RefreshContainer.Visualizer>
				<RefreshVisualizer RefreshRequested="OnRefreshRequested" RefreshStateChanged="RefreshVisualizer_RefreshStateChanged">
					<RefreshVisualizer.Content>
						<Image Source="ms-appx:///Assets/SunWhite.png" />
					</RefreshVisualizer.Content>
				</RefreshVisualizer>
			</RefreshContainer.Visualizer>
			<ListView x:Name="listView" HorizontalAlignment="Center" />
		</RefreshContainer>

		<Button x:Name="btn" Content="Do Something" />
	</Grid>
</Page>
